@model Vendor.Models.Products

@{
    ViewBag.Title = "Add to Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main-container" class="main-container">
    @using (Html.BeginForm("addToCart", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <!-- Start Product Details Gallery -->
        <div class="product-details">
            <div class="container">
                <div class="row">
                    <!-- Product Image -->
                    <div class="col-md-5">
                        <div class="product-gallery-box product-gallery-box--default m-b-60">
                            <div class="product-image--large product-image--large-horizontal">
                                <img class="img-fluid" id="img-zoom" src="~/@Model.ProductPicture" data-zoom-image="~/@Model.ProductPicture" alt="@Model.ProductName">
                            </div>
                            <div id="gallery-zoom" class="product-image--thumb product-image--thumb-horizontal pos-relative">
                                <a class="zoom-active" data-image="~/@Model.ProductPicture" data-zoom-image="~/@Model.ProductPicture">
                                    <img class="img-fluid" src="~/@Model.ProductPicture" alt="@Model.ProductName">
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="col-md-7">
                        <div class="product-details-box m-b-60">
                            <h4 class="font--regular m-b-20">@Model.ProductName</h4>

                            <div class="product__price m-t-5">
                                <span class="product__price product__price--large">₹@Model.ProductPrice</span>
                            </div>

                            <div class="product-var p-tb-30">
                                <div class="product-quantity product-var__item d-flex align-items-center">
                                    <span class="product-var__text">Quantity: </span>
                                    <form class="quantity-scale m-l-20">
                                        <div class="value-button" id="decrease" onclick="decreaseValue()">-</div>
                                        <input type="number" id="number" name="number" value="1" min="1" />
                                        <div class="value-button" id="increase" onclick="increaseValue()">+</div>
                                    </form>
                                </div>

                                <div class="product-var__item">
                                    <input class="btn btn--long btn--radius-tiny btn--green btn--green-hover-black btn--uppercase btn--weight m-r-20" type="submit" value="Add to Cart" />
                                    <a href="wishlist.html" class="btn btn--round btn--round-size-small btn--green btn--green-hover-black"><i class="fas fa-heart"></i></a>
                                </div>

                                <div class="product-var__item">
                                    <span class="product-var__text">Guaranteed safe checkout</span>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</main>
<script>
    function increaseValue() {
        let value = parseInt(document.getElementById('number').value, 10);
        value = isNaN(value) ? 0 : value;
        value++;
        document.getElementById('number').value = value;
    }

    function decreaseValue() {
        let value = parseInt(document.getElementById('number').value, 10);
        value = isNaN(value) ? 0 : value;
        if (value > 1) value--;
        document.getElementById('number').value = value;
    }
</script>

