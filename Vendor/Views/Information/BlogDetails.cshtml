@model Vendor.Models.BlogModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Blog Details";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .blog-container {
        max-width: 800px;
        margin: auto;
    }

    .blog-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
    }

    .blog-title {
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }

    .blog-meta {
        font-size: 15px;
        color: #6c757d;
    }

    .blog-content {
        font-size: 17px;
        color: #444;
        line-height: 1.7;
    }

    .back-btn {
        background-color: #89c74a;
        color: white;
        border-radius: 8px;
        padding: 10px 20px;
        text-decoration: none;
    }

        .back-btn:hover {
            background-color: #78b63c;
        }

    .share-icons a {
        margin-right: 10px;
        font-size: 22px;
        color: #89c74a;
        transition: 0.3s;
    }

        .share-icons a:hover {
            color: #6ba32d;
        }
</style>

<div class="container blog-container mt-5">
    <div class="blog-card">
        <h2 class="blog-title">📖 @Model.BlogTitle</h2>
        <p class="blog-meta">✍ By <b>@Model.BlogAutherName</b> | 📅 @Model.BlogDate</p>
        <hr>

        <!-- Render blog content as formatted HTML -->
        <div class="blog-content">
            @Html.Raw(Model.BlogDescription)
        </div>

        <div class="text-center mt-4">
            <h5>🔗 Share this blog:</h5>
            <div class="share-icons">
                <a href="https://wa.me/?text=@Model.BlogTitle - Read more at @Request.Url" target="_blank"><i class="fab fa-whatsapp"></i></a>
                <a href="https://twitter.com/intent/tweet?text=@Model.BlogTitle&url=@Request.Url" target="_blank"><i class="fab fa-twitter"></i></a>
                <a href="https://www.facebook.com/sharer/sharer.php?u=@Request.Url" target="_blank"><i class="fab fa-facebook"></i></a>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("UserBlogs", "Information")" class="back-btn">🔙 Back to Blogs</a>
        </div>
    </div>
</div>

<!-- FontAwesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
