@model List<Vendor.Models.BlogModel>
@{
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
    ViewBag.Title = "Blog List";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Blog Management
            <small>All Blog Posts</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Blog List</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Blog Posts</h3>
                        <div class="box-tools">
                            <a href="@Url.Action("AddAdminBlog", "Information")" class="btn btn-primary">
                                <i class="fa fa-plus"></i> Add New Blog
                            </a>
                        </div>
                    </div>

                    <div class="box-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var blog in Model)
                                {
                                    <tr>
                                        <td>@blog.BlogTitle</td>
                                        <td>@blog.BlogAutherName</td>
                                        <td>@blog.BlogDate</td>
                                        <td>
                                            <a href="@Url.Action("EditBlog", "Information", new { id = blog.BlogId })" class="btn btn-sm btn-primary">
                                                Edit
                                            </a>
                                            @using (Html.BeginForm("DeleteBlog", "Information", FormMethod.Post, new { style = "display:inline;" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="blogId" value="@blog.BlogId" />
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this blog?');">
                                                    Delete
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
    <style>
        /* Blog Management Custom Styles */
        .box-primary {
            border-top-color: #3c8dbc;
        }

        .table-bordered > thead > tr > th {
            background-color: #f4f8fa;
            color: #3c8dbc;
        }

        .btn-primary {
            background-color: #3c8dbc;
            border-color: #367fa9;
        }

            .btn-primary:hover {
                background-color: #367fa9;
                border-color: #2c6da4;
            }

        .form-control {
            border-radius: 3px;
        }

        .box-body .form-group {
            margin-bottom: 20px;
        }

        .box-body label {
            font-weight: 600;
            color: #3c8dbc;
        }

        .alert-success {
            background-color: #e8f4fc;
            border-color: #3c8dbc;
            color: #3c8dbc;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .box-title {
                font-size: 18px;
            }

            .btn {
                margin-bottom: 5px;
            }
        }
    </style>

