@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main-container" class="main-container">
    <div class="about-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="about-img">
                        <div class="img-responsive">
                            <img src="~/Content/assets/img/about/about2.png" alt="About Us - Fertilizer Company" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about-content">
                        <h4 class="font--regular">Providing Sustainable Fertilizer Solutions for a Greener Future</h4>
                        <p class="para__text">
                            At <strong>Gsore Fertilizers</strong>, we are dedicated to revolutionizing agriculture with eco-friendly,
                            high-quality fertilizers that boost crop yield while preserving soil health. With years of research and innovation,
                            our products ensure balanced nutrition for plants, contributing to sustainable farming practices worldwide.
                        </p>
                        <a href="#" class="btn btn--icon-left btn--small btn--radius btn--transparent btn--border-green btn--border-green-hover-green font--regular text-capitalize m-t-20">Explore Our Products<i class="fal fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ::::::  Start CMS Section  ::::::  -->
    <div class="cms m-t-100">
        <div class="container">
            <div class="row">
                <!-- Start Single CMS box -->
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="cms__content">
                        <div class="cms__icon">
                            <i class="fas fa-seedling"></i>
                        </div>
                        <div class="cms__text">
                            <h6 class="cms__title">Eco-Friendly Solutions</h6>
                            <p class="para__text">Our fertilizers are crafted to nourish plants while protecting the environment.</p>
                        </div>
                    </div>
                </div> <!-- End Single CMS box -->
                <!-- Start Single CMS box -->
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="cms__content">
                        <div class="cms__icon">
                            <i class="fas fa-leaf"></i>
                        </div>
                        <div class="cms__text">
                            <h6 class="cms__title">Guaranteed Crop Yield</h6>
                            <p class="para__text">Boost your farm productivity with scientifically formulated fertilizers.</p>
                        </div>
                    </div>
                </div> <!-- End Single CMS box -->
                <!-- Start Single CMS box -->
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="cms__content">
                        <div class="cms__icon">
                            <i class="fas fa-headset"></i>
                        </div>
                        <div class="cms__text">
                            <h6 class="cms__title">Expert Support 24/7</h6>
                            <p class="para__text">Get expert guidance on the best fertilizer solutions for your crops.</p>
                        </div>
                    </div>
                </div> <!-- End Single CMS box -->
            </div>
        </div>
    </div> <!-- ::::::  End CMS Section  ::::::  -->
</main>
